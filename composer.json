{
    "name": "hackifier/hackifier",
    "type": "project",
    "description": "A proof-of-concept PHP to Hack transpiler",
    "license": "MIT",
    "authors": [
        {
            "name": "azjezz",
            "email": "azjezz@protonmail.com"
        }
    ],
    "require": {
        "nikic/php-parser": "^4.2",
        "symfony/console": "^4.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "phpstan/phpstan": "^0.11.5",
        "phpstan/phpstan-strict-rules": "^0.11.0",
        "phpunit/phpunit": "^8.0"
    },
    "config": {
        "apcu-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Hackifier\\": "src/Hackifier/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hackifier\\Test\\": "tests/"
        }
    },
    "scripts": {
        "analyze": "phpstan analyze -c ./phpstan.neon",
        "check": [
            "@analyze",
            "@test"
        ],
        "fix": "php-cs-fixer fix --ansi",
        "test": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
